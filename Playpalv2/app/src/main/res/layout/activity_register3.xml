<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register3">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tell_us_about_your_doggo"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_name_texfield"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#4F4F4F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <EditText
            android:id="@+id/dog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Dog's name"
            android:hint="@string/dog_name_hint"
            android:imeOptions="actionNext"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_breeds_textfield"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/dog_breed"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_name_texfield">


        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/breeds_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="3" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_age_input_texfield"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="@string/age"
        app:layout_constraintEnd_toEndOf="@+id/dog_sex_input_texfield"
        app:layout_constraintEnd_toStartOf="@id/dog_sex_input_texfield"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_breeds_textfield">


        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/dog_age_list"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:completionThreshold="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_sex_input_texfield"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="125dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:hint="@string/sex"
        app:layout_constraintEnd_toEndOf="@+id/dog_weight_input_texfield"
        app:layout_constraintStart_toEndOf="@id/dog_age_input_texfield"
        app:layout_constraintTop_toBottomOf="@+id/dog_breeds_textfield">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/dog_sex_list"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:completionThreshold="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_weight_input_texfield"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:hint="@string/weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dog_sex_input_texfield"
        app:layout_constraintTop_toBottomOf="@+id/dog_breeds_textfield">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/dog_weight_list"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:completionThreshold="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_bio_input_texfield"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"

        android:layout_marginTop="30dp"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#4F4F4F"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_sex_input_texfield"

        >

        <EditText
            android:id="@+id/dog_bio"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:autofillHints="Dog's Bio"
            android:hint="@string/dog_bio_hint"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:gravity="start"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next3"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/teal_200"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_next"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_bio_input_texfield"
        app:layout_constraintVertical_bias="0.487" />

</androidx.constraintlayout.widget.ConstraintLayout>